<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:padding="20dp"
    android:layout_height="match_parent"
    tools:context=".PhoneFragment">

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:id="@+id/phoneLinearLayout"
      android:padding="10dp"
      android:backgroundTint="@color/colorWhite"
      android:background="@drawable/border"
      android:orientation="horizontal">
      <com.hbb20.CountryCodePicker
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:backgroundTint="#f5f2d0"
          android:id="@+id/ccp"/>

      <EditText
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:hint="Phone number"
          android:backgroundTint="#f5f2d0"
          android:inputType="phone"
          android:drawableRight="@drawable/ic_baseline_close_24"
          android:id="@+id/phoneEditText"
          android:background="#f5f2d0"
          android:padding="7dp"/>


  </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/phoneLinearLayout"
        android:layout_marginTop="20dp"
        android:id="@+id/text2"
        android:text="You may receive SMS updates from instagram and can opt out at any time"
        android:textAlignment="center"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:layout_below="@+id/text2"
        android:layout_marginTop="15dp"
        android:id="@+id/phoneNextButton"
        android:background="@drawable/border"
        android:backgroundTint="@color/facebook_blue"
        android:textColor="@color/colorWhite"
        android:text="Next"
        android:textAllCaps="false"/>



</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:layout_width="60dp" android:layout_height="wrap_content" android:layout_marginStart="10dp">
    <RelativeLayout android:layout_gravity="center" android:layout_width="50dp" android:layout_height="50dp" android:layout_marginTop="5dp">
        <com.mikhaellopez.circularimageview.CircularImageView android:id="@+id/storyPhoto" android:layout_width="45dp" android:layout_height="45dp" android:src="@drawable/ic_action_image_circle" android:layout_alignParentTop="true" android:layout_centerHorizontal="true"/>
        <com.mikhaellopez.circularimageview.CircularImageView android:id="@+id/storyPlus" android:layout_width="20dp" android:layout_height="20dp" android:src="@drawable/ic_action_add_story" android:layout_alignParentBottom="true" android:layout_alignParentEnd="true"/>
    </RelativeLayout>
    <TextView android:textColor="@android:color/black" android:layout_gravity="center" android:id="@+id/addStoryText" android:layout_width="wrap_content" android:layout_height="wrap_content" android:maxLines="1"/>
</LinearLayout>

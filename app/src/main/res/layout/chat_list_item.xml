<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:padding="15dp" android:layout_width="match_parent" android:layout_height="wrap_content">
    <com.mikhaellopez.circularimageview.CircularImageView android:id="@+id/profileImageView" android:layout_width="50dp" android:layout_height="50dp" android:src="@drawable/ic_action_image_circle" app:civ_border_width="0dp"/>
    <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_centerVertical="true" android:layout_marginStart="10dp" android:layout_toEndOf="@+id/profileImageView">
        <LinearLayout android:orientation="vertical" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="4">
            <TextView android:textSize="16sp" android:textStyle="bold" android:id="@+id/usernameTextView" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Username"/>
            <TextView android:id="@+id/lastMessageTextView" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Last Message"/>
        </LinearLayout>
        <ImageView android:layout_gravity="center" android:layout_width="0dp" android:layout_height="wrap_content" android:src="@drawable/ic_action_camera" android:layout_weight="1"/>
    </LinearLayout>
</RelativeLayout>

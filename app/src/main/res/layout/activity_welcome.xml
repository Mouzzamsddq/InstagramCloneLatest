<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:padding="40dp"
    android:layout_height="match_parent"
    tools:context=".WelcomeActivity">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome to instagram"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        android:textAllCaps="true"
        android:id="@+id/welcomeTextView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="150dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        android:id="@+id/contentTextView"
        android:text="Find people to follow and start sharing photos. You can change your username at any time"
        android:layout_below="@+id/welcomeTextView"
        android:layout_marginTop="8dp"/>


    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Username"
        android:background="@drawable/border"
        android:padding="10dp"
        android:layout_marginTop="20dp"
        android:id="@+id/usernameEditText"
        android:layout_below="@id/contentTextView"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/facebook_blue"
        android:layout_below="@+id/usernameEditText"
        android:layout_marginTop="20dp"
        android:inputType="textPersonName"
        android:background="@drawable/border"
        android:text="Next"
        android:id="@+id/welcomNextButton"
        android:textAllCaps="false"
        android:textColor="#ffff"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:visibility="gone"
        android:layout_below="@id/usernameEditText"
        android:layout_marginTop="20dp"
        android:id="@+id/progressLinearLayout"
        android:background="@drawable/border"
        android:backgroundTint="@color/facebook_blue"
        android:orientation="vertical">

        <ProgressBar
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:indeterminateTint="@color/colorWhite"/>

    </LinearLayout>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:text="By clicking Next, you agree to our Term Data Policy and Cookie policy"/>





</RelativeLayout>